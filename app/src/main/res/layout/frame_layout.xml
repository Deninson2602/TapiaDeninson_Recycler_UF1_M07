<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="270dp"
        android:text="Layout especial, clique el perro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="400dp"
        android:background="@null"
        android:onClick="goGridLayout"
        app:srcCompat="@drawable/flecha_correcta" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="374dp"
        android:layout_height="205dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="30dp"
        android:onClick="goLayoutBotons"
        app:srcCompat="@drawable/la_enegia_en_la_vida_de_tu_cachorro" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="500dp"
        android:onClick="goFormulario"
        android:text="Go Formulario" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="400dp"
        android:onClick="goOhMyGod"
        android:text="Go OH MY GOOOOD" />

</FrameLayout>